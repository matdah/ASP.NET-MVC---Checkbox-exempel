@{
    ViewData["Title"] = "Create";
}
@model Checkboxes2.Models.PersonViewModel

<h1>Personal</h1>

<h4>Registrera ny</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            @if (Model.Skills != null)
            {
                @foreach (var skills in Model.Skills)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                            type="checkbox"
                            value="@skills.Name",
                            name="MySkills",
                            id="skill_@skills.SkillId">
                        <label class="form-check-label" for="skill_@skills.SkillId">
                            @skills.Name
                        </label>
                    </div>
                }
            }
            <br>
            <div class="form-group">
                <input type="submit" value="LÃ¤gg till" class="btn btn-primary"
                    />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
